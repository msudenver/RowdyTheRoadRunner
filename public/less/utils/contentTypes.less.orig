/***************HighlightBox *********************/



// 
// TRIANGLE COLOR RULE
.HighlightBox .triangle{
	left: 50%;
	bottom: 0;
	top: 105%;
	border-bottom: 3em solid #16A085;
  	@x: 25%  ; @y: 5%;
  	transform-origin: @x @y;
	-ms-transform-origin:  @x @y;
	-webkit-transform-origin: @x @y;
  	z-index: -1;
	.rotate(180deg);
	
}

.linkcolumn .HighlightBox .triangle {
  border-bottom: 3em solid @pomegranate;
}


.HighlightBox {
	color: @white;
	padding: 1.5em;
	// margin: 20px;
	margin-bottom: 1.5em;
	background: #16A085;
	position: relative;
	zoom: 1;
	z-index: 2; /*  see .triangle indexÂ , this one has to be greater than triangle*/
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
	-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
}

.HighlightBox-title {
	color: @white;
	font-size: 1.5em;
	text-align: center;
}

.HighlightBox-content,  .HighlightBox-content a{
	color: @white;
	font-size: 1em;
}

.linkcolumn .HighlightBox {
  margin: 0 0 1em 0;
  background: @pomegranate; 
  zoom: 1;
  
}

.3ColumnRight .HighlightBox {
  margin: 0 0 1em 0;
  background: @orange; 
  zoom: 1;
}

/***************Zebra Stripe For Newsroom*********************/

.story_preview {
   border: solid silver 1px ;
}
.story_preview{
